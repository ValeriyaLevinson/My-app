<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpeningActivity"
    android:background="@drawable/readandwhite_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery:15%"
        android:textSize="25sp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:id="@+id/battery_textview"
        >

    </TextView>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="95dp"
        android:id="@+id/iv"
        android:background="@drawable/user_picture_background"
        >

    </ImageView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="take picture"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:id="@+id/take_picture"
        >

    </Button>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to your favors bank"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        android:textColor="#FF0024"
        android:textStyle="italic">

    </TextView>

    <Button
        android:id="@+id/opening_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="my favors"
        android:textColor="#FF0024"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        >

    </Button>



</LinearLayout>